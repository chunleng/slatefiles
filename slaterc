config nudgePercentOf screenSize
config resizePercentOf screenSize

# Layouts
layout pLeft        BEFORE push left bar-resize:screenSizeX/2
layout pRight       BEFORE push right bar-resize:screenSizeX/2
layout pTop         BEFORE push up bar-resize:screenSizeY/2
layout pBottom      BEFORE push down bar-resize:screenSizeY/2
layout pTopLeft     BEFORE corner top-left resize:screenSizeX/2;screenSizeY/2
layout pTopRight    BEFORE corner top-right resize:screenSizeX/2;screenSizeY/2
layout pBottomLeft  BEFORE corner bottom-left resize:screenSizeX/2;screenSizeY/2
layout pBottomRight BEFORE corner bottom-right resize:screenSizeX/2;screenSizeY/2
layout pFull        BEFORE move screenOriginX;screenOriginY screenSizeX;screenSizeY

# Tiling
bind k:ctrl;cmd chain layout pTop | layout pTopLeft | layout pTopRight
bind j:ctrl;cmd chain layout pBottom | layout pBottomLeft | layout pBottomRight
bind h:ctrl;cmd chain layout pLeft | layout pTopLeft | layout pBottomLeft
bind l:ctrl;cmd chain layout pRight | layout pTopRight | layout pBottomRight
bind k:cmd focus up
bind j:cmd focus down
bind h:cmd focus left
bind l:cmd focus right
# Fullscreen
bind m:cmd chain layout pFull | shell path:~/.slate-scripts "~/.slate-scripts/call_applescript.sh minimize"
bind m:ctrl,cmd chain layout pFull | shell path:~/.slate-scripts "~/.slate-scripts/call_applescript.sh minimize"

# Throw to Another Screen
bind up:ctrl;cmd throw up
bind down:ctrl;cmd throw down
bind left:ctrl;cmd throw left
bind right:ctrl;cmd throw right


# Restart slate
bind r:ctrl;cmd relaunch
source ~/.slate.local if_exists

# Important App
bind i:ctrl;cmd focus 'iTerm'
bind o:ctrl;cmd focus 'Firefox'

# Mac Shortcut Binding
bind padEnter:cmd shell path:~/.slate-scripts "~/.slate-scripts/call_applescript.sh full-screen"
# bind m:cmd        shell path:~/.slate-scripts "~/.slate-scripts/call_applescript.sh minimize"
# bind m:cmd,shift  shell path:~/.slate-scripts "~/.slate-scripts/call_applescript.sh minimize-restore"
